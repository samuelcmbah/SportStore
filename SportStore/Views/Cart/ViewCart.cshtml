@* SportStore/Views/Cart/ViewCart.cshtml *@
@model CartViewModel

@{
    ViewData["Title"] = "My Cart";
    var returnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString;
}

<div class="container-fluid px-lg-5 py-4">
    <div class="d-flex align-items-center mb-4">
        <h4 class="fw-bold mb-0">Cart</h4>
        <span class="ms-2 text-muted">(@Model.Cart.CartItems.Count() items)</span>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Cart.CartItems.Any())
    {
        <div class="row g-4">
            <!-- LEFT SIDE: Cart Items -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                    <div class="card-body p-0">
                        @foreach (var item in Model.Cart.CartItems)
                        {
                            var maxQuantity = Math.Min(item.Product.StockQuantity, 10); // Limit dropdown to 10 or stock quantity

                            <div class="p-3 border-bottom cart-item-row">
                                <div class="row align-items-center">
                                    <!-- Product Info -->
                                    <div class="col-12 col-md-6 mb-3 mb-md-0">
                                        <div class="d-flex align-items-center">
                                            <div class="cart-img-wrap me-3">
                                                <img src="~/images/@(item.Product.PhotoPath ?? "noimage.png")"
                                                     alt="@item.Product.Name"
                                                     class="rounded border"
                                                     style="width: 80px; height: 80px; object-fit: cover;">
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1 fw-bold">@item.Product.Name</h6>
                                                @if (item.Product.IsInStock)
                                                {
                                                    <p class="small text-success mb-0">
                                                        <i class="bi bi-check2-circle"></i> In Stock
                                                    </p>
                                                    @if (item.Product.StockQuantity <= 5)
                                                    {
                                                        <p class="small text-warning mb-0">
                                                            Only @item.Product.StockQuantity left
                                                        </p>
                                                    }
                                                }
                                                else
                                                {
                                                    <p class="small text-danger mb-0">
                                                        <i class="bi bi-x-circle"></i> Out of Stock
                                                    </p>
                                                }

                                                <!-- Remove Link -->
                                                <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.Product.ProductID" />
                                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                                    <button type="submit"
                                                            class="btn btn-link p-0 text-decoration-none small cart-remove-btn mt-1">
                                                        <i class="bi bi-trash3 me-1"></i> Remove
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Price -->
                                    <div class="col-4 col-md-2 text-center">
                                        <span class="fw-bold">@item.Product.Price.ToString("c0")</span>
                                    </div>

                                    <!-- Quantity Dropdown -->
                                    <div class="col-4 col-md-2 text-center">
                                        <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" id="qty-form-@item.Product.ProductID">
                                            <input type="hidden" name="productId" value="@item.Product.ProductID" />
                                            <input type="hidden" name="returnUrl" value="@returnUrl" />

                                            <div class="quantity-selector">
                                                <label for="qty-@item.Product.ProductID" class="visually-hidden">Quantity</label>
                                                <select name="quantity"
                                                        id="qty-@item.Product.ProductID"
                                                        class="form-select form-select-sm"
                                                        onchange="this.form.submit()"
                                                        @(!item.Product.IsInStock ? "disabled" : "")>
                                                    <option value="0">0 (Remove)</option>
                                                    @for (int i = 1; i <= maxQuantity; i++)
                                                    {
                                                        <option value="@i" selected="@(i == item.Quantity)">@i</option>
                                                    }
                                                    @if (maxQuantity < item.Product.StockQuantity)
                                                    {
                                                        <option value="@(maxQuantity + 1)" disabled>10+</option>
                                                    }
                                                </select>
                                            </div>
                                        </form>
                                    </div>

                                    <!-- Subtotal -->
                                    <div class="col-4 col-md-2 text-end">
                                        <span class="fw-bold text-sport-primary">@item.Subtotal.ToString("c0")</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    <a href="/" class="text-sport-primary text-decoration-none fw-bold">
                        <i class="bi bi-arrow-left me-1"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <!-- RIGHT SIDE: Order Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 100px; z-index: 10;">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h6 class="mb-0 fw-bold text-uppercase">Order Summary</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@Model.TotalPrice.ToString("c0")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Delivery</span>
                            <span class="text-success fw-bold">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total</span>
                            <span class="h5 fw-bold text-sport-primary">@Model.TotalPrice.ToString("c0")</span>
                        </div>

                        <a asp-action="Checkout" asp-controller="Order" class="btn btn-action w-100 py-3 fw-bold text-uppercase">
                            Checkout (@Model.TotalPrice.ToString("c0"))
                        </a>

                        <div class="mt-3 text-center">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" height="20" class="mx-2 opacity-50" alt="PayPal">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" height="20" class="mx-2 opacity-50" alt="Mastercard">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" height="20" class="mx-2 opacity-50" alt="Visa">
                        </div>
                    </div>
                    <div class="card-footer bg-light-soft border-0 p-3">
                        <p class="small text-muted mb-0">
                            <i class="bi bi-shield-check text-success me-1"></i> Secure Payment Guarantee.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white rounded shadow-sm">
            <div class="mb-4">
                <i class="bi bi-cart-x display-1 text-muted"></i>
            </div>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Looks like you haven't added anything to your cart yet.</p>
            <a href="/" class="btn btn-sport px-5 py-2 fw-bold mt-3">START SHOPPING</a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/cart.css" />
    <style>
        .quantity-selector select {
            min-width: 70px;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 0.25rem 0.5rem;
            cursor: pointer;
        }

            .quantity-selector select:focus {
                border-color: #86b7fe;
                outline: 0;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .cart-img-wrap img {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }

        .cart-remove-btn {
            color: #dc3545;
            font-size: 0.875rem;
        }

            .cart-remove-btn:hover {
                color: #bb2d3b;
                text-decoration: underline !important;
            }
    </style>
}