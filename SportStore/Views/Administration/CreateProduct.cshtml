@using SportStore.ViewModels.ProductVM;

@model ProductCreateViewModel

@{
    ViewData["Title"] = "Create Product";
}
<h3>Create a New Product</h3>

<form class="mt-3" enctype="multipart/form-data" asp-controller="Administration" asp-action="CreateProduct" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Cartegory" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Cartegory" class="form-control" placeholder="Cartegory">
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control custom-file-input" >
            <span asp-validation-for="Photo" class="text-danger"></span>

        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-primary" asp-controller="administration" asp-action="manageproducts">Cancel</a>
        </div>
    </div>
</form>