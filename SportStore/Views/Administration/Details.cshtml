@model Product

@{
    ViewData["Title"] = "Product Details";

}

<h3>Product Details</h3>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Name</th>

        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Category</th>

        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Description</th>

        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.ToString("c")</td>
    </tr>
</table>

<a class="btn btn-success" asp-action="Edit">Edit</a>
<a class="btn btn-primary" asp-action="ManageProducts">Back</a>
