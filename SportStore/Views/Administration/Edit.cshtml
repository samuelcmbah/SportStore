@model ProductEditViewModel

@{
    ViewData["Title"] = "Edit Product";
}
<h3>Edit Your Product Details</h3>

<form class="mt-3" enctype="multipart/form-data" asp-controller="Administration" asp-action="edit" method="post">
    <div class="mb-3">
        <input hidden asp-for="ProductID" />
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Cartegory" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Cartegory" class="form-control" placeholder="Cartegory">
            <span asp-validation-for="Cartegory" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
    </div>
    
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-controller="administration" asp-action="manageproducts">Cancel</a>
        </div>
    </div>
</form>