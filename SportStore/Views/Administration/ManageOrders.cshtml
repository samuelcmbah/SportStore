@model List<Order> 

@{
    ViewData["Title"] = "Orders";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Product Details</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() > 0)
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.Name</td>
                    <td>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in order.OrderItems)
                                {
                                    <tr>
                                        <td>@product.Product.Name</td>
                                        <td>@product.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Administration" asp-action="ManageOrders" asp-route-orderId="@order.OrderID">Ship</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td>There are no orders at the moment.</td></tr>
        }
    </tbody>
</table>


