@using SportStore.Utils
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportStore</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <!-- 1. LEFT SIDE: Navigation Links (Removed flex-grow-1) -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- 2. CENTER: Long Search Bar (Added flex-grow-1 and mx-lg-5) -->
                    <form class="d-flex flex-grow-1 mx-lg-5 my-2 my-lg-0"
                          asp-controller="Home"
                          asp-action="Index"
                          method="get"
                          style="max-width: 800px;">
                        <!-- Controls the maximum width -->

                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                dropdown
                            </span>
                            <input class="form-control border-start-0 ps-0"
                                   type="search"
                                   name="search"
                                   placeholder="Search products, brands and categories"
                                   value="@Context.Request.Query["search"]" />

                            <button class="btn btn-outline-primary px-4" type="submit">
                                <i class="fa-solid fa-magnifying-glass text-muted"></i>
                            </button>
                        </div>

                        @if (Context.Request.Query.ContainsKey("categoryId"))
                        {
                            <input type="hidden" name="categoryId" value="@Context.Request.Query["categoryId"]" />
                        }
                    </form>

                    <!-- 3. RIGHT SIDE: Account & Cart -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-regular fa-user me-1"></i> Hi, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form method="post" asp-area="" asp-controller="account" asp-action="logout">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                        }

                        <li class="nav-item ms-lg-3">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Cart" asp-action="ViewCart">
                                <div class="position-relative">
                                    <i class="fa-solid fa-cart-shopping fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-circle bg-success p-0"
                                          style="font-size: 0.35rem; width: 12px; height: 12px; line-height: 12px; text-align: center;">
                                        @await Component.InvokeAsync("CartWidget")
                                    </span>
                                </div>
                                <span class="ms-2 d-none d-lg-inline">Cart</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="row m-1 p-1">
        <div class="col-3" id="categories">
            @await Component.InvokeAsync("NavigationMenu")
        </div>

        <div class="container col-9">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SportStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
