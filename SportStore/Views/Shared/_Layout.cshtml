@using SportStore.Utils
@inject SignInManager<ApplicationUser> signInManager
@inject SportStore.Services.IServices.ICategoryService CategoryService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportStore</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <!--  LEFT SIDE: Navigation Links (Removed flex-grow-1) -->
                    <ul class="navbar-nav">
                        
                    </ul>

                    @{
                        string? currentCatIdString = Context.Request.Query["categoryId"];
                        string displayCategoryName = "All Categories";

                        if (long.TryParse(currentCatIdString, out long catId))
                        {
                            var category = CategoryService.GetAll().FirstOrDefault(c => c.CategoryId == catId);
                            if (category != null)
                            {
                                displayCategoryName = category.Name;
                            }
                        }
                    }

                    <!--  CENTER: Long Search Bar with Integrated Category Dropdown -->
                    <form class="d-flex flex-grow-1 mx-lg-5 my-2 my-lg-0"
                          asp-controller="Home"
                          asp-action="Index"
                          method="get"
                          style="max-width: 800px;">

                        <div class="input-group">
                            <!-- The Category Dropdown Button -->
                            <button class="btn btn-light border-end-0 border dropdown-toggle"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    style="background-color: #f8f9fa; min-width: 160px; text-align: left;">
                                <i class="fa-solid fa-layer-group me-1 text-muted small"></i> @displayCategoryName
                            </button>
                            <ul class="dropdown-menu shadow">
                                @await Component.InvokeAsync("NavigationMenu")
                            </ul>

                            <!-- The Search Input -->
                            <input class="form-control border-start-0 ps-2"
                                   type="search"
                                   name="search"
                                   placeholder="Search products, brands and categories"
                                   value="@Context.Request.Query["search"]" />

                            <!-- Search Button -->
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="fa-solid fa-magnifying-glass text-white"></i>
                            </button>
                        </div>

                        @* Preserve category if one is selected via the search form *@
                        @if (Context.Request.Query.ContainsKey("categoryId"))
                        {
                            <input type="hidden" name="categoryId" value="@Context.Request.Query["categoryId"]" />
                        }
                    </form>

                    <!--  RIGHT SIDE: Account & Cart -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-regular fa-user me-1"></i> Hi, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form method="post" asp-area="" asp-controller="account" asp-action="logout">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                        }

                        <li class="nav-item ms-lg-3">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Cart" asp-action="ViewCart">
                                <div class="position-relative">
                                    <i class="fa-solid fa-cart-shopping fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-circle bg-success p-0"
                                          style="font-size: 0.35rem; width: 12px; height: 12px; line-height: 12px; text-align: center;">
                                        @await Component.InvokeAsync("CartWidget")
                                    </span>
                                </div>
                                <span class="ms-2 d-none d-lg-inline">Cart</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @{
        // Check if we are currently in "Search Mode"
        bool isSearching = !string.IsNullOrEmpty(Context.Request.Query["search"]);

        // Determine the width of the main content area
        string mainContentClass = isSearching ? "col-md-9" : "col-12";
    }

    <div class="row m-1 p-1">
        @if (isSearching)
        {
            <div class="col-md-3" id="sidebar">
                <!-- This shows ONLY when a search is active -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-dark text-white fw-bold">
                        <i class="fa-solid fa-filter me-2"></i>Filters
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">Showing results for: <strong>"@Context.Request.Query["search"]"</strong></p>
                        <hr />
                            @await Component.InvokeAsync("FilterPanel")
                        <!-- You can add more filters here later (Brand, Rating, etc.) -->
                        <div class="text-center py-3">
                            <i class="fa-solid fa-sliders fa-2x text-light"></i>
                            <p class="mt-2 text-muted">Filter panel goes here</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- This div automatically switches between col-9 and col-12 -->
        <div class="@mainContentClass">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SportStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
