@using SportStore.Utils
@inject SignInManager<ApplicationUser> signInManager
@inject SportStore.Services.IServices.ICategoryService CategoryService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportStore</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Added Bootstrap Icons CDN to fix your missing icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/regular.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportStore.styles.css" asp-append-version="true" />


</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm mb-4">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-bolt-lightning me-1"></i>SportStore
                </a>

                <!-- Responsive Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    @{
                        string? currentCatIdString = Context.Request.Query["categoryId"];
                        string displayCategoryName = "All Categories";

                        if (long.TryParse(currentCatIdString, out long catId))
                        {
                            var category = CategoryService.GetAll().FirstOrDefault(c => c.CategoryId == catId);
                            if (category != null) { displayCategoryName = category.Name; }
                        }
                    }

                    <!-- Search Center -->
                    <form class="d-flex flex-grow-1 mx-lg-5 my-3 my-lg-0 search-group"
                          asp-controller="Home" asp-action="Index" method="get" style="max-width: 700px;">

                        <div class="input-group">
                            <button class="btn btn-category dropdown-toggle px-3 d-none d-sm-block"
                                    type="button" data-bs-toggle="dropdown">
                                @displayCategoryName
                            </button>
                            <ul class="dropdown-menu shadow">
                                @await Component.InvokeAsync("NavigationMenu")
                            </ul>

                            <input class="form-control ps-3" type="search" name="search"
                                   placeholder="Search sports gear..." value="@Context.Request.Query["search"]" />

                            <button class="btn btn-search px-4" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>

                        @if (Context.Request.Query.ContainsKey("categoryId"))
                        {
                            <input type="hidden" name="categoryId" value="@Context.Request.Query["categoryId"]" />
                        }
                    </form>

                    <!-- Account & Cart -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link-custom" href="#" id="userDrop" data-bs-toggle="dropdown">
                                    <i class="fa-regular fa-circle-user me-1 fs-5"></i>
                                    <span class="d-none d-xl-inline">Hi, @User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                                            <i class="bi bi-box-seam me-2 text-sport-primary"></i> My Orders
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                        }

                        <!-- Cart Widget -->
                        <li class="nav-item ms-lg-3">
                            <a class="nav-link nav-link-custom d-flex align-items-center cart-pill text-white text-decoration-none"
                               asp-controller="Cart" asp-action="ViewCart">

                                <div class="position-relative">
                                    <i class="fa-solid fa-cart-shopping fs-5"></i>

                                    @* The component now handles the <span> entirely *@
                                    @await Component.InvokeAsync("CartWidget")
                                </div>

                                <span class="ms-2 d-none d-md-inline text-dark">Cart</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-content">

        <div class="container-fluid px-lg-5">
            @{
                bool isSearching = !string.IsNullOrEmpty(Context.Request.Query["search"]);
                string mainContentClass = isSearching ? "col-md-9" : "col-12";
            }

            <div class="row">
                @if (isSearching)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white border-bottom py-3">
                                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-sliders me-2"></i>Filter Results</h6>
                            </div>
                            <div class="card-body">
                                <p class="small text-muted">Searching for: <span class="text-dark fw-bold">"@Context.Request.Query["search"]"</span></p>
                                <hr />
                                @await Component.InvokeAsync("FilterPanel")
                            </div>
                        </div>
                    </div>
                }

                <div class="@mainContentClass">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer">
        <div class="container text-center">
            <p class="mb-0">&copy; 2024 - <span class="fw-bold text-sport-primary">SportStore</span> - Performance Gear for Athletes</p>
            <div class="mt-2">
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted small">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>