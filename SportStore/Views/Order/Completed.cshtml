@using SportStore.Models.Enums
@model OrderCompletedViewModel

@{
    ViewData["Title"] = "Order Confirmation";
}
<div id="order-status"
     data-order-id="@Model.OrderId"
     data-order-status="@Model.OrderStatus">
    <!-- status UI lives here -->

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center p-4">

                        <div id="order-status">
                            @if (Model.OrderStatus == OrderStatus.Pending)
                            {
                                <div class="spinner-border text-primary mb-3" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <h3>@Model.Message</h3>
                                <p class="text-muted">Please wait while we confirm your payment.</p>
                                <p><strong>Order #@Model.OrderId</strong></p>
                            }
                            else if (Model.OrderStatus == OrderStatus.Success)
                            {
                                <div class="text-success mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                    </svg>
                                </div>
                                <h3>@Model.Message</h3>
                                <p>Order <strong>#@Model.OrderId</strong></p>
                                <p class="text-muted">We'll ship your goods as soon as possible.</p>
                            }
                            else if (Model.OrderStatus == OrderStatus.Failed)
                            {
                                <div class="text-danger mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                    </svg>
                                </div>
                                <h3>Payment Failed</h3>
                                <p>Order <strong>#@Model.OrderId</strong></p>
                                <p class="text-muted">Please try again or contact support.</p>
                                <a class="btn btn-danger mt-2" asp-controller="Order" asp-action="Checkout">Try Again</a>
                            }
                        </div>

                        <div class="mt-4">
                            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Return to Store</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/order-status-poller.js"></script>

    @if (Model.OrderStatus == OrderStatus.Pending)
    {
        <script>
            const el = document.getElementById('order-status');
            const orderId = el.dataset.orderId;

            OrderStatusPoller.start(orderId);
        </script>
    }
}

