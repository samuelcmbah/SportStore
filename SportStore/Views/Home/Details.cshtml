@* SportStore/Views/Home/Details.cshtml *@
@model ProductDetailsViewModel

@{
    ViewData["Title"] = Model.Product.Name;
    var photoPath = Model.PhotoPath;
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="container mt-4">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">@Model.Product.Category?.Name</li>
            <li class="breadcrumb-item active">@Model.Product.Name</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row bg-white p-3 shadow-sm rounded">
        <!-- Left Column: Product Image -->
        <div class="col-md-5 text-center border-end">
            <img src="@photoPath"
                 class="img-fluid"
                 alt="@Model.Product.Name"
                 asp-append-version="true"
                 style="max-height: 400px; object-fit: contain;" />
        </div>

        <!-- Right Column: Product Info & Purchase -->
        <div class="col-md-7 ps-md-5">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <span class="badge bg-info mb-2">@Model.Product.Category?.Name</span>
                    <h3 class="fw-bold">@Model.Product.Name</h3>
                </div>
            </div>

            <hr />

            <div class="price-section mb-4">
                <h3 class="text-primary fw-bold">@Model.Product.Price.ToString("c")</h3>
                @if (Model.Product.IsInStock)
                {
                    <small class="text-success">
                        <i class="bi bi-check-circle"></i> In stock
                        @if (Model.Product.StockQuantity <= 10)
                        {
                            <span class="text-warning">(@Model.Product.StockQuantity available)</span>
                        }
                    </small>
                }
                else
                {
                    <small class="text-danger">
                        <i class="bi bi-x-circle"></i> Out of stock
                    </small>
                }
            </div>

            <div class="actions-section border-top pt-4">
                <form method="post"
                      asp-controller="Cart"
                      asp-action="UpdateCart"
                      id="cart-form">
                    <input type="hidden" name="productId" value="@Model.Product.ProductID" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <!-- Quantity Selector Dropdown -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="me-3 fw-bold">Qty:</label>
                        <select name="quantity"
                                id="quantity-select"
                                class="form-select"
                                style="width: 120px;"
                                onchange="updateCart()"
                                @(!Model.Product.IsInStock ? "disabled" : "")>
                            @if (Model.Product.IsInStock)
                            {
                                <option value="0" selected="@(!Model.IsInCart)">Select Qty</option>
                                @for (int i = 1; i <= Model.MaxQuantity; i++)
                                {
                                    <option value="@i" selected="@(Model.IsInCart && i == Model.QuantityInCart)">@i</option>
                                }
                                @if (Model.Product.StockQuantity > 10)
                                {
                                    <option disabled>10+ in stock</option>
                                }
                            }
                            else
                            {
                                <option value="0">Out of stock</option>
                            }
                        </select>

                        @if (Model.IsInCart)
                        {
                            <span class="ms-3 text-muted small">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                In your cart
                            </span>
                        }
                    </div>

                    <div class="d-grid gap-2">
                        @if (Model.IsInCart)
                        {
                            <a asp-controller="Cart"
                               asp-action="ViewCart"
                               class="btn btn-action btn-lg fw-bold text-uppercase shadow-sm">
                                <i class="bi bi-bag-check"></i>
                                Go to Cart
                            </a>
                        }
                        else
                        {
                            <button type="button"
                                    onclick="addToCart()"
                                    class="btn btn-action btn-lg fw-bold text-uppercase shadow-sm"
                                    id="add-to-cart-btn"
                                    @(!Model.Product.IsInStock ? "disabled" : "")>
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        }
                    </div>
                </form>
            </div>

            <div class="promotions mt-4 p-3 bg-light rounded">
                <h6 class="fw-bold"><i class="bi bi-shield-check text-success"></i> Promotions</h6>
                <p class="small mb-1">• Free delivery on orders over ₦50,000</p>
                <p class="small mb-0">• 7 days easy return policy</p>
            </div>
        </div>
    </div>

    <!-- Bottom Section: Detailed Description -->
    <div class="row mt-4 bg-white p-4 shadow-sm rounded">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">Product Details</h4>
            <div class="product-description" style="line-height: 1.8;">
                @if (!string.IsNullOrEmpty(Model.Product.Description))
                {
                    @Model.Product.Description
                }
                else
                {
                    <p class="text-muted">No detailed description available for this product.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let isInCart = @Model.IsInCart.ToString().ToLower()

        function addToCart() {
            const quantity = document.getElementById('quantity-select').value;

            if (quantity === "0") {
                alert("Please select a quantity");
                return;
            }

            document.getElementById('cart-form').submit();
        }

        function updateCart() {
            // If item is already in cart, auto-submit on quantity change
            if (isInCart) {
                const quantity = document.getElementById('quantity-select').value;

                // Show loading indicator (optional)
                const btn = document.getElementById('add-to-cart-btn');
                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="bi bi-arrow-repeat spinner-border spinner-border-sm"></i> Updating...';
                }

                document.getElementById('cart-form').submit();
            }
        }
    </script>
}

<style>
    body {
        background-color: #f5f5f5;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #6c757d;
    }

    .breadcrumb-item.active {
        color: #212529;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .spinner-border-sm {
        display: inline-block;
        width: 1rem;
        height: 1rem;
        border: 2px solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spin 0.75s linear infinite;
        vertical-align: text-bottom;
    }
</style>