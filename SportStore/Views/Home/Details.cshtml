@model Product

@{
    ViewData["Title"] = Model.Name;
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.png");
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";

}

<div class="container mt-4">
    <!-- Breadcrumbs (Optional but helpful for UX) -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item">@Model.Category?.Name</li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row bg-white p-3 shadow-sm rounded">
        <!-- Left Column: Product Image -->
        <div class="col-md-5 text-center border-end">
            <img src="@photoPath"
                 class="img-fluid"
                 alt="@Model.Name"
                 asp-append-version="true"
                 style="max-height: 400px; object-fit: contain;" />
        </div>

        <!-- Right Column: Product Info & Purchase -->
        <div class="col-md-7 ps-md-5">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <span class="badge bg-info mb-2">@Model.Category?.Name</span>
                    <h2 class="fw-bold">@Model.Name</h2>
                </div>
            </div>

            <hr />

            <div class="price-section mb-4">
                <h3 class="text-primary fw-bold">@Model.Price.ToString("c")</h3>
                <small class="text-muted">In stock</small>
            </div>

            <div class="actions-section border-top pt-4">
                <form method="post" asp-controller="Cart" asp-action="AddToCart">
                    <input type="hidden" asp-for="ProductID" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <!-- Optional: Quantity Selector -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="me-3 fw-bold">Quantity:</label>
                        <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 80px;" />
                    </div>

                    <button type="submit" class="btn btn-success btn-lg w-100 fw-bold text-uppercase shadow-sm">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </button>
                </form>
            </div>

            <div class="promotions mt-4 p-3 bg-light rounded">
                <h6 class="fw-bold"><i class="bi bi-shield-check text-success"></i> Promotions</h6>
                <p class="small mb-1">• Free delivery on orders over 50,000</p>
                <p class="small mb-0">• 7 days easy return policy</p>
            </div>
        </div>
    </div>

    <!-- Bottom Section: Detailed Description -->
    <div class="row mt-4 bg-white p-4 shadow-sm rounded">
        <div class="col-12">
            <h4 class="border-bottom pb-2 mb-3">Product Details</h4>
            <div class="product-description" style="line-height: 1.8;">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
                else
                {
                    <p class="text-muted">No detailed description available for this product.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Mimic the Jumia-style look */
    body {
        background-color: #f5f5f5;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #6c757d;
    }

    .breadcrumb-item.active {
        color: #212529;
    }
</style>