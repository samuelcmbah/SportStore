@using SportStore.ViewModels.Auth
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_SignInUp.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-2">Forgot your password?</h2>
                <p class="text-muted text-center mb-4">Enter your email and we'll send you a reset link.</p>

                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Send Reset Link</button>
                    </div>

                    <div class="mt-3">
                        <p>Remembered it? <a asp-action="Login">Back to login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}