@using SportStore.ViewModels.Auth
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_SignInUp.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-2">Set a new password</h2>
                <p class="text-muted text-center mb-4">Choose a strong password for your account.</p>

                <form asp-action="ResetPassword" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input asp-for="UserId" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="form-group mb-3">
                        <label asp-for="Password">New Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter new password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}