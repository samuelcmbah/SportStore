@using SportStore.ViewModels.ProductVM;
@model ProductEditViewModel

@{
    ViewData["Title"] = "Edit Product";
    var photoPath = "~/images/" + Model.ExistingPhotoPath;

}
<h3>Edit Your Product Details</h3>

<form class="mt-3" enctype="multipart/form-data" asp-area="Admin" asp-controller="Products" asp-action="edit" method="post">
    <div class="mb-3">
        <input hidden asp-for="ProductID" />
        <input hidden asp-for="ExistingPhotoPath" />

        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId"
                asp-items="Model.Categories"
                class="form-select">
            <option value="CatetoryId">--</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control custom-file-input">
        </div>
    </div>

    <div class="mb-3">
       <img src="@photoPath" class="imageThumbnail" asp-append-version="true"/>
    </div>
    
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" 
                asp-controller="products" 
                asp-action="index">Cancel</a>
        </div>
    </div>
</form>